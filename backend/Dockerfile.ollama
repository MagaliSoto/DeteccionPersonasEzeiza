FROM ubuntu:22.04 AS ollama

WORKDIR /app

# Instalar dependencias y Ollama
RUN apt-get update && apt-get install -y curl ca-certificates && \
    curl -fsSL https://ollama.com/install.sh | sh && \
    rm -rf /var/lib/apt/lists/*

# Configuraci√≥n para exponer Ollama
ENV OLLAMA_HOST=0.0.0.0
EXPOSE 11434

# Comando por defecto: arrancar Ollama y bajar el modelo de la env var
CMD ["/bin/bash", "-c", "ollama serve & sleep 5 && if ! ollama list | grep -q \"$OLLAMA_MODEL\"; then ollama pull \"$OLLAMA_MODEL\"; fi && wait"]
